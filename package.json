{
  "name": "leetml",
  "displayName": "LeetML",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onFileSystem:leetml",
    "onWebviewPanel:leetml.markdownPreview"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "leetml-container",
          "title": "LeetML",
          "icon": "./resources/icons/leetml.png"
        }
      ]
    },
    "views": {
      "leetml-container": [
        {
          "id": "main",
          "name": "LeetML",
          "icon": "./resources/icons/leetml.png"
        }
      ]
    },
    "commands": [
      {
        "command": "leetml.openDocument",
        "title": "Open Document"
      },
      {
        "command": "leetml.openCodeEditor",
        "title": "Open Code Editor"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
